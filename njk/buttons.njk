               <button class="btn rounded-pill btn-label-info">Info</button>
               <button class="btn rounded-pill btn-label-light">Light</button>
               <button class="btn rounded-pill btn-label-dark">Dark</button>
            </div>
         </div>
      </div>
   </div>
