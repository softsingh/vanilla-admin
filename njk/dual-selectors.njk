      <div class="mb-4">
         <h4>Dual Selector</h4>
      </div>
      <div class="row g-4">
         <div class="col-md-12">
            <label class="form-label mb-3" for="departments-selector">Departments</label>
            <div id="dual-selector-departments-selector" class="dual-selector" data-widget-id="departments-selector"
               data-field-name="departments">
               <!-- CHOSEN LIST (LEFT SIDE) -->
               <div class="dual-selector-box">
                  <div class="d-flex flex-column gap-1 mb-1">
                     <label class="form-label">
                        Chosen <strong>(<span id="chosen-count-departments-selector">3</span>)</strong>
                     </label>
                     <input id="search-chosen-departments-selector" class="form-control" placeholder="Search...">
                  </div>
                  <ul id="chosen-departments-selector" class="dual-list list-group border rounded p-2 scrollable-box">
                     <li class="list-group-item d-flex justify-content-between align-items-center" data-value="61">
                        <span>Pharmaceutical Sciences</span>
                     </li>
                     <li class="list-group-item d-flex justify-content-between align-items-center" data-value="63">
                        <span>Chemistry</span>
                     </li>
                     <li class="list-group-item d-flex justify-content-between align-items-center" data-value="35">
                        <span>Biotechnology</span>
                     </li>
                  </ul>
                  <!-- Hidden field storing order -->
                  <input type="hidden" id="departments-selector_order" name="departments_order" value="61,63,35">
                  <div id="departments-selector_values_container" class="d-none"></div>
               </div>
               <!-- BUTTONS -->
               <div class="dual-selector-buttons">
                  <!-- Move Available → Chosen -->
                  <button id="btn-left-departments-selector" type="button" class="btn btn-sm btn-primary dual-btn"><i
                        class="bx bx-chevron-up fs-4"></i></button>
                  <!-- Move Chosen → Available -->
                  <button id="btn-right-departments-selector" type="button" class="btn btn-sm btn-primary dual-btn"><i
                        class="bx bx-chevron-down fs-4"></i></button>
                  <!-- Move All Available → Chosen -->
                  <button id="btn-all-left-departments-selector" type="button"
                     class="btn btn-sm btn-secondary dual-btn"><i class="bx bx-chevrons-up fs-4"></i></button>
                  <!-- Move All Chosen → Available -->
                  <button id="btn-all-right-departments-selector" type="button"
                     class="btn btn-sm btn-secondary dual-btn"><i class="bx bx-chevrons-down fs-4"></i></button>
                  <!-- SORTING (UP / DOWN) for chosen list -->
                  <button id="btn-up-departments-selector" type="button" class="btn btn-sm btn-dark dual-btn">
                     <i class="bx bx-sort-up fs-4"></i>
                  </button>
                  <button id="btn-down-departments-selector" type="button" class="btn btn-sm btn-dark dual-btn">
